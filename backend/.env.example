# Email Configuration

# SMTP Settings (Required for sending emails)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="AIMS Portal <your-email@gmail.com>"

# Email Allowlist Configuration (Optional)
# Set to 'false' to disable email allowlist and allow sending to any email address
# Useful for production environments
ENFORCE_EMAIL_ALLOWLIST=false

# Comma-separated list of allowed email addresses (only used if ENFORCE_EMAIL_ALLOWLIST is not 'false')
# EMAIL_ALLOWLIST=email1@example.com,email2@example.com,email3@example.com

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/aims_portal"

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Clerk (if using)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
